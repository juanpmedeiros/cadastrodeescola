@model PontoId_API.Models.Turma

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Turma</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TurmaNumero" class="control-label"></label>
                <input asp-for="TurmaNumero" class="form-control" />
                <span asp-validation-for="TurmaNumero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriodoAula" class="control-label"></label>
                <input asp-for="PeriodoAula" class="form-control" />
                <span asp-validation-for="PeriodoAula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EscolaId" class="control-label">Escola</label>
                <select asp-for="EscolaId" class="form-control" asp-items="ViewBag.NomeEscola"></select>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeAlunos" class="control-label"></label>
                <input asp-for="QuantidadeAlunos" class="form-control" />
                <span asp-validation-for="QuantidadeAlunos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
